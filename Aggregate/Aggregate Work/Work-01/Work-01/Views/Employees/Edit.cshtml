@model EmployeeEditModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-8">
        <form asp-action="Edit" asp-controller="Employees" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="EmployeeId" />
            <h3>Create New Employee</h3>

            <div class="form-group row mb-1">
                <label asp-for="EmployeeName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="text" asp-for="EmployeeName" class="form-control form-control-sm" />
                    <span asp-validation-for="EmployeeName" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Gender" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <select type="text" asp-for="Gender" class="form-select form-select-sm" asp-items="@Html.GetEnumSelectList<Gender>()">
                        <option value="">Select one</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Address" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="text" asp-for="Address" class="form-control form-control-sm" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Salary" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="text" asp-for="Salary" class="form-control form-control-sm" />
                    <span asp-validation-for="Salary" class="text-danger small"></span>
                </div>
            </div>
           

            <div class="form-group row mb-1">
                <label asp-for="JoiningDate" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="date" asp-for="JoiningDate"  class="form-control form-control-sm" />
                    <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="file" asp-for="Picture" class="form-control form-control-sm" />
                    <span asp-validation-for="Picture" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="IsaCurrentEmployee" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-10">
                    <input type="checkbox" asp-for="IsaCurrentEmployee" />

                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-12">
                    <div class="d-flex align-items-center">
                        <h4>Qualifications</h4>
                        <span style="flex:1 1 auto;"></span>
                        <button type="submit" name="operation" value="add" class="btn btn-secondary btn-sm" formnovalidate>Add</button>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>PassingYear</th>
                                <th>Degree</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Qualifications.Count; i++)
                            {
                                <tr style="vertical-align:top">
                                    <td>
                                        <input type="text" asp-for="@Model.Qualifications[i].PassingYear" class="form-control form-control-sm" />
                                        <span asp-validation-for="@Model.Qualifications[i].PassingYear" class="text-danger small"></span>
                                    </td>
                                    <td>
                                        <input type="text" asp-for="@Model.Qualifications[i].Degree" class="form-control form-control-sm" />
                                        <span asp-validation-for="@Model.Qualifications[i].Degree" class="text-danger small"></span>
                                    </td>

                                    <td style="width:70px; text-align:right">
                                        <button name="operation" type="submit" class="btn btn-danger btn-sm" value="remove_@i" formnovalidate>Del</button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary" name="operation" value="update">Save</button>

                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        <img src="~/Pictures/@ViewBag.CurrentPic" style="width:150px" class="pt-3" />
    </div>
    <div class="col-12">
        <a asp-action="Index" class="btn-link">Back to list</a>
    </div>
</div>

@section scripts {
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/validate/jquery.validate.min.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.min.js"></script>
}
